                <% if (cookie_is_logged) { %>
                <li><a href="/user/logout"
                        onclick="return window.confirm('Êtes vous sûr de vouloir vous déconnecter ?')"><i
                            class="fa-solid fa-arrow-right-from-bracket"></i></a></li>
                <% } else { %>
                <li><a href="/user"><i class="fa-solid fa-user-large"></i></a></li>
                <% } %>

            </ul>
        </nav>
    </header>
    <div class="logo-image">
