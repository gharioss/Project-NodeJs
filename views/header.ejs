                <% } else { %>
                <li><a href="/user">SE CONNECTER</a></li>
                <% } %>

            </ul>
        </nav>
        <nav class="topnav media-nav">
            <ul>
                <li><a href="/"><i class="fa-solid fa-house"></i></a></li>
                <li><a href="/recipes"><i class="fa-solid fa-book-open"></i></a></li>
                <li><a href="/about"><i class="fa-solid fa-info"></i></a></li>
                <li><a href="/contact"><i class="fa-solid fa-phone"></i></a></li>

