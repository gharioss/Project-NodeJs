<body>
    <header>
        <nav class="topnav">
            <ul>
                <li><a href="/">ACCUEIL</a></li>
                <li><a href="/recipes">RECETTES</a></li>
                <li><a href="/about">A PROPOS</a></li>
                <li><a href="/contact">CONTACT</a></li>

                <% if(cookie_is_logged && cookie_is_logged[0].role == 'Admin') { %>
                <li><a href="/admin">ADMIN</a></li>
